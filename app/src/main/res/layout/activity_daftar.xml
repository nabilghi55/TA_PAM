<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="200dp"
        android:layout_height="173dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/elang" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/header_image"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/manropebold"
            android:textColor="@color/black"/>

        <TextView
            android:fontFamily="@font/manropebold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"/>

        <EditText
            android:paddingStart="20dp"
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="Masukkan username"
            android:background="@drawable/edit_text"/>

        <TextView
            android:fontFamily="@font/manropebold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:paddingStart="20dp"
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Masukkan email"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"/>

        <TextView
            android:fontFamily="@font/manropebold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Masukkan password"
            android:background="@drawable/edit_text"
            android:inputType="textPassword" />

        <TextView
            android:fontFamily="@font/manropebold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:id="@+id/edit_telepon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Masukkan nomor telepon"
            android:background="@drawable/edit_text"/>

<!--        <CheckBox-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:layout_marginBottom="5dp"-->
<!--            android:id="@+id/checkbox_agreement"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Dengan mendaftar, Anda menyetujui Syarat &amp; Ketentuan dan Kebijakan Privasi" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="20dp"
            android:id="@+id/btn_daftar"
            android:fontFamily="@font/manropebold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:text="Daftar" />



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/manropebold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah mempunyai akun?" />

            <TextView
                android:fontFamily="@font/manropebold"
                android:id="@+id/text_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Masuk"
                android:layout_marginLeft="5dp"
                android:textColor="@color/blue_200"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
