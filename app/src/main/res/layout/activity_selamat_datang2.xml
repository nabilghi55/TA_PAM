<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selamatdatang2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selamatdatang2">

    <ImageView
        android:id="@+id/gambarselamatdatang2"
        android:layout_width="111dp"
        android:layout_height="84dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="27dp"
        android:src="@drawable/selamatdatang2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tulisan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambarselamatdatang2"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Aplikasi pariwisata terbaik di Indonesia"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/blue_200"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tulisan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tulisan1"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Jelajahi pulau-pulau eksotis, pantai yang memukau, pegunungan yang menakjubkan, dan kekayaan budaya yang mempesona."
        android:textSize="5dp"
        android:textColor="@color/black"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tulisan2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="283px"
            android:layout_height="32px"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:src="@drawable/elipsslider" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonlanjut"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="200dp"
            android:background="@drawable/buttonlanjut" />

    </LinearLayout>

</RelativeLayout>
